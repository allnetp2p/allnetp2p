{
  "compilerOptions": {
      "module": "es2020",
      "moduleResolution": "node",
      "target": "es2020",
      "lib": [ "es2020", "DOM" ],
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strict": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "declaration": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
